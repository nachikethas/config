# Solarized dark colours
# See https://github.com/seebi/tmux-colors-solarized
set-option -g status-style fg=yellow,bg=black,default
set-option -g pane-border-style fg=black
set-option -g pane-active-border-style fg=brightgreen
set-option -g message-style fg=brightred,bg=black

set-window-option -g window-status-style fg=brightblue,bg=default,dim
set-window-option -g window-status-current-style fg=brightred,bg=default,bright
set-window-option -g window-status-bell-style fg=black,bg=red #base02, red
#set-window-option -g window-status-separator " î‚± "

# pane number display
set-option -g display-panes-active-colour blue #blue
set-option -g display-panes-colour brightred #orange

# clock
set-window-option -g clock-mode-colour green #green

set -g status-justify "left"
set -g status "on"
set -g status-left "#[fg=black,bg=yellow,bold] #S #[fg=yellow,bg=black,default] "

# Display CPU and Memory in the status bar
# https://github.com/thewtex/tmux-mem-cpu-load
set -g status-interval 2
set -g status-right "#(tmux-mem-cpu-load --interval 2)#[default]"
set -g status-right-length 60
